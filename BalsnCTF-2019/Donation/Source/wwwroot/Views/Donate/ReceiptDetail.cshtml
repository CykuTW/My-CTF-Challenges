@using Donate.Models

@model Donate.Models.Receipt

@{
    ViewBag.Title = "Donation Receipt";
}

<br />
<br />

<div class="ts narrow container grid">
    <div class="sixteen wide column">
        <h3 class="ts dividing header">
            <i class="globe icon"></i>Nekocan, Inc. Donation Receipt (#@Model.Number)
        </h3>
    </div>
    <div class="sixteen wide column">
        <div class="ts slate">
            <span class="header">Thank you for your donation.</span>
        </div>
        <h4>Personal Information</h4>
        <strong>Receipt Number</strong>：@Model.Number<br>
        <strong>Payment Date</strong>：@Model.PaymentDate<br>
        <strong>Donor Name</strong>：@Model.Donor.Name<br />
        <strong>Donor E-Mail</strong>：@Model.Donor.Email<br>
        <strong>Donor Phone</strong>：@Model.Donor.Phone<br />
    </div>
    <div class="sixteen wide column">
        <br>
        <table class="ts very basic striped table">
            <thead>
                <tr>
                    <th>Quantity</th>
                    <th>Item</th>
                    <th>Detail</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Donate.Models.Item item in Model.Items)
                {
                    <tr>
                        <td>@item.Quantity</td>
                        <td>@item.Name</td>
                        <td>@item.Detail</td>
                        <td>$@item.Amount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="eight wide column">
        <br>
        <h4 class="ts header">Date：@Model.Date</h4>
        <table class="ts very basic table">
            <tbody>
                <tr>
                    <td><strong>Sub Total：</strong></td>
                    <td>@Model.SubTotal</td>
                </tr>
                <tr>
                    <td><strong>Tax ( 0.00% )：</strong></td>
                    <td>@Model.Tax</td>
                </tr>
                <tr>
                    <td><strong>Shipping Fee：</strong></td>
                    <td>@Model.ShippingFee</td>
                </tr>
                <tr>
                    <td><strong>Total：</strong></td>
                    <td>@Model.Total</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="sixteen wide column">
        <div class="ts secondary fitted menu">
            <div class="item">
                <div class="ts relaxed separated buttons">
                    <button class="ts button" onclick="window.print();">
                        <i class="print icon"></i> Print
                    </button>
                    <a class="ts button" href="@TempData["ToPdfUrl"]">
                        <i class="download icon"></i> Download as PDF
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<br />